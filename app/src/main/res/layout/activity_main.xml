<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cris.bullyngapp.MainActivity"
    android:background="@color/colorBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:contentDescription="@string/about"
                android:id="@+id/imageViewAbout"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight=".5"
                app:srcCompat="@drawable/ic_launcher_help" />

            <ImageView
                android:contentDescription="@string/history"
                android:id="@+id/imageViewHistory"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight=".5"
                app:srcCompat="@drawable/ic_launcher_action" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="center_horizontal"
                android:text="@string/about"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center_horizontal"
                android:text="@string/history"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:contentDescription="@string/question"
                android:id="@+id/imageViewQuestion"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight=".5"
                app:srcCompat="@drawable/ic_launcher_question"
                tools:layout_editor_absoluteY="351dp" />

            <ImageView
                android:contentDescription="@string/motivation"
                android:id="@+id/imageViewMotivation"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight=".5"
                app:srcCompat="@drawable/ic_launcher_motivational"
                tools:layout_editor_absoluteY="351dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/question"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/motivation"

                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
