<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cris.bullyngapp.HistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/buttonHistory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history1" />

        <Button
            android:id="@+id/buttonHistory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history2" />

        <Button
            android:id="@+id/buttonHistory3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history3" />

        <Button
            android:id="@+id/buttonHistory4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history4" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
